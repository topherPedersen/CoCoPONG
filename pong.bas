30 FOR X = 0 TO 63
40 FOR Y = 0 TO 31
50 SET(X,Y,1)
60 NEXT Y
70 NEXT X
100 REM DRAW PLAYER PADDLE
105 SET(4,13,5)
110 SET(4,15,5)
120 SET(4,17,5)
130 REM DRAW OPPONENTS PADDLE
135 SET(58,13,5)
140 SET(58,15,5)
